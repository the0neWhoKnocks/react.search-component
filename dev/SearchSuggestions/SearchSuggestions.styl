.search-suggestions {
  display: none;

  &.has--items {
    display: flex;
    flex-direction: column;
    position: relative;

    &::before,
    &::after {
      content: '';
      width: 100%;
      position: absolute;
      left: 0;
      pointer-events: none;
      z-index: 2;
    }

    &::before {
      height: 1.5em;
      top: 0;
      background: linear-gradient(#fff, rgba(#fff, 0));
    }

    &::after {
      height: 2.5em;
      bottom: 0;
      background: linear-gradient(rgba(#fff, 0), #fff);
    }
  }

  &__wrapper {
    height: 100%;
    padding: 1.25em;
    background: #fff;
    overflow: auto;
  }

  &__title,
  &__view-all {
    padding: 0.25em;
  }

  &__title {
    color: #aaa;
    text-transform: uppercase;
  }

  &__items {
    margin-top: 1em;
  }

  &__view-all {
    color: #000;
    font-weight: bold;
    text-decoration: none;
    margin: 0.5em 0 0.25em;
    display: block;

    &::after {
      content: '\276F'; // &#10095;
      display: inline-block;
      padding-left: 0.5em;
    }
  }
}